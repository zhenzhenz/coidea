<idea-plugin>
    <id>sse.tongji.coidea</id>
    <name>CoIdea</name>
    <vendor email="15801781997@163.com" url="https://github.com/zhenzhenz">Tongji</vendor>

    <description><![CDATA[
    Real-Time Collaborative Programming with IntelliJ IDEA.<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="CoIntelliJIdea.CoIntelliJIdeaMenu" text="CoIDEA" description="CoIntelliJIdea">
            <add-to-group group-id="MainMenu" anchor="last"  />
            <action id="CoIntelliJIdea.CoIdea" class="sse.tongji.coidea.action.InitUserAction" text="Link Start"
                    description="Collaborative real-time editor"/>
            <action id="CoIntelliJIdea.EditorHandler" class="sse.tongji.coidea.action.DisconnectAction" text="Disconnect"
                    description="Disconnect from the server"/>
        </group>
    </actions>
</idea-plugin>